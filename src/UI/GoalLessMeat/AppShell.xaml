<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GoalLessMeat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GoalLessMeat.Views"
    Shell.FlyoutBehavior="Disabled">
    <TabBar Shell.TabBarForegroundColor="{StaticResource Primary}" >
       <Tab Title="Today">
           <ShellContent ContentTemplate="{DataTemplate views:DailyEncodingPage}" />
       </Tab>
       <Tab Title="Calendar">
           <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}" />
       </Tab>
        <Tab Title="Statistics">
           <ShellContent ContentTemplate="{DataTemplate views:StatisticsPage}" />
       </Tab>
    </TabBar>
</Shell>
