<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GoalLessMeat.Views.DailyEncodingPage"
             Title="Today">
    <StackLayout>
        <Label Text="What did you eat today?" Style="{StaticResource Header1LabelStyle}"/>
        <VerticalStackLayout>
            <Button Text="Vegan" Style="{StaticResource VeganButtonStyle}" />
            <Button Text="Vegetarian" Style="{StaticResource VegetarianButtonStyle}" />
            <Button Text="Fish based" Style="{StaticResource FishButtonStyle}" />
            <Button Text="Meat based" Style="{StaticResource MeatButtonStyle}" />
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>
